<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="result_table_selected">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="result_table_unselected">

        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="SpiroKitTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpiroKitButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpiroKitEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="SpiroKitCheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpiroKitRadioButton" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>