<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpiroKitForTab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/SpiroKitTextView</item>
        <item name="android:buttonStyle">@style/SpiroKitButton</item>
        <item name="android:editTextStyle">@style/SpiroKitEditText</item>
        <item name="android:radioButtonStyle">@style/SpiroKitRadioButton</item>
        <item name="android:checkboxStyle">@style/SpiroKitCheckBox</item>

    </style>

</resources>