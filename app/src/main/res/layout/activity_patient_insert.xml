<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_input.PatientInsertActivity"
    android:background="@color/gray_background"
    >

    <View
        android:id="@+id/view_line_center_insert_patient"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/transparent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_bar_insert_patient"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/img_btn_back_insert_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_30_black"
            android:background="?attr/selectableItemBackgroundBorderless"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="@string/patient_add"
            app:layout_constraintStart_toEndOf="@id/img_btn_back_insert_patient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginStart="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout_bar_insert_patient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_line_center_insert_patient"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/chart_number"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <EditText
                android:id="@+id/et_chart_number_insert_patient"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/text_field_background_round_white"
                android:elevation="10dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nanum_gothic"
                android:hint="@string/chart_number"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/name"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <EditText
                android:id="@+id/et_name_insert_patient"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/text_field_background_round_white"
                android:elevation="10dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nanum_gothic"
                android:hint="@string/name"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/gender"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"

                >

                <android.widget.Button
                    android:id="@+id/btn_select_male_insert_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/primary_color"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:text="@string/male"
                    android:textSize="20sp"

                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    />

                <android.widget.Button
                    android:id="@+id/btn_select_female_insert_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:text="@string/female"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/birth"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="2"

                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"

                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"

                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_gothic"
                    android:text="@string/height"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_gothic"
                    android:text="@string/weight"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="20dp"

                    android:layout_weight="1"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <EditText
                    android:id="@+id/et_height_insert_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field_background_round_white"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/nanum_gothic"
                    android:hint="@string/height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/et_weight_insert_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field_background_round_white"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/nanum_gothic"
                    android:hint="@string/weight"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="20dp"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/weight"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"

                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"

                android:layout_marginHorizontal="20dp"
                />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout_bar_insert_patient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_line_center_insert_patient"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/birth"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="2"

                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"

                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"

                    android:layout_marginEnd="20dp"

                    />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/smoking_is_now"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"

                >

                <android.widget.Button
                    android:id="@+id/btn_select_smoking_insert_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/primary_color"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:text="@string/smoking"
                    android:textSize="20sp"

                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    />

                <android.widget.Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:text="@string/no_smoking"
                    android:textSize="20sp"

                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/birth"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="2"

                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"

                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"

                    android:layout_marginEnd="20dp"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/smoking_amount_per_day"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                />

            <EditText
                android:id="@+id/et_smoke_per_day_insert_patient"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/text_field_background_round_white"
                android:elevation="10dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nanum_gothic"
                android:hint="@string/smoking_amount_per_day"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"

                android:inputType="numberDecimal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic"
                android:text="@string/match_doctor"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"

                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"

                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <android.widget.Button
        android:id="@+id/btn_insert_patient"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:text="@string/save"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>