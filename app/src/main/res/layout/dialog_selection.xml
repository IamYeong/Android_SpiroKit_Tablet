<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog">

    <TextView
        android:id="@+id/tv_title_selection_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear_button_box_selection_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="test"

        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"

        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="70dp"
        />

    <LinearLayout
        android:id="@+id/linear_button_box_selection_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_selection_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        >

        <android.widget.Button
            android:id="@+id/btn_reject_selection_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"

            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"

            android:text="@string/cancel"
            android:textColor="@color/gray_text"
            android:textSize="15sp"

            android:paddingHorizontal="70dp"
            android:paddingVertical="12dp"
            android:elevation="10dp"
            android:layout_margin="10dp"

            android:fontFamily="@font/nanum_barun_gothic_light"
            />

        <android.widget.Button
            android:id="@+id/btn_agree_selection_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"

            android:background="@drawable/button_shape"
            android:backgroundTint="@color/primary_color"

            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_margin="10dp"

            android:paddingHorizontal="70dp"
            android:paddingVertical="12dp"
            android:elevation="10dp"

            android:fontFamily="@font/nanum_barun_gothic_light"
            />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>