<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_fvc_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    >



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_30_black"
        android:background="?attr/selectableItemBackgroundBorderless"

        android:layout_gravity="top|end"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:id="@+id/linear_fvc_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"

        android:background="@drawable/item_selected_result"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"

            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_fvc_order_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1차 검사 (Pre)"

                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="15sp"

                android:maxLines="1"

                android:layout_gravity="end|center_vertical"
                />

            <TextView
                android:id="@+id/tv_fvc_date_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark"
                android:text="17:20"
                android:textSize="12sp"

                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"

                android:layout_gravity="start|center_vertical"

                android:maxLines="1"
                />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:stretchColumns="4"

            android:layout_marginVertical="10dp"
            >

            <TableRow
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"

                    />

                <TextView
                    android:id="@+id/tv_fvc_meas_table_column"

                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="@string/meas"

                    android:paddingHorizontal="5dp"

                    />

                <TextView
                    android:id="@+id/tv_fvc_pred_table_column"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="@string/pred"

                    android:paddingHorizontal="5dp"
                    />

                <TextView
                    android:id="@+id/tv_fvc_percent_table_column"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="@string/percent"

                    android:paddingHorizontal="5dp"

                    />


            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_fvc_table_row"
                    android:layout_weight="1"
                    android:text="@string/fvc"

                    android:paddingVertical="5dp"

                    />

                <TextView
                    android:id="@+id/tv_fvc_meas_result_table"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"

                    android:paddingHorizontal="5dp"

                    android:layout_height="match_parent"

                    android:foreground="@drawable/table_cell_outline"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fvc_pred_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_outline"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fvc_compare_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_under_line"
                    android:gravity="center"
                    />


            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_fev1_table_row"
                    android:layout_weight="1"

                    android:text="@string/fev1"
                    android:paddingVertical="5dp"

                    />

                <TextView
                    android:id="@+id/tv_fev1_meas_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_outline"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fev1_pred_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_outline"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fev1_compare_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_under_line"
                    android:gravity="center"
                    />


            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_fev1_per_table_row"
                    android:layout_weight="1"

                    android:text="@string/fev1percent"

                    android:paddingVertical="5dp"

                    />

                <TextView
                    android:id="@+id/tv_fev1_per_meas_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/table_cell_outline"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fev1_per_pred_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_outline"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fev1_per_compare_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_under_line"
                    android:gravity="center"
                    />


            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_pef_table_row"
                    android:layout_weight="1"

                    android:text="@string/pef"

                    android:paddingVertical="5dp"

                    />

                <TextView
                    android:id="@+id/tv_pef_meas_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_side_line"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_pef_pred_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:background="@drawable/table_cell_side_line"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_pef_compare_result_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="3dp"

                    android:gravity="center"
                    />


            </TableRow>



        </TableLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>