<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.operator.OperatorActivity"
    android:background="@color/gray_background"
    >

    <View
        android:id="@+id/view_center_line_operator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_operator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/view_center_line_operator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_operator"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginVertical="10dp"
        android:background="@color/gray_background"
        />

    <LinearLayout
        android:id="@+id/linear_operator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_center_line_operator"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@color/gray_background"
        >

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_operator_work"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_weight="1"

            android:background="@drawable/spinner_background_white"

            android:elevation="10dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            />

        <EditText
            android:id="@+id/et_operator_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_weight="1"
            android:layout_marginEnd="20dp"

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/text_field_background_round_white"
            android:backgroundTint="@color/white"

            android:elevation="10dp"
            android:hint="@string/name"
            android:padding="10dp"
            />


        <android.widget.Button
            android:id="@+id/btn_add_operator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            android:background="@drawable/button_shape"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:text="추가"

            android:layout_weight="1"

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>