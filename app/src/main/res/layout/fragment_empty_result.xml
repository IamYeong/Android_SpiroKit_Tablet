<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.result.empty.EmptyResultFragment"
    android:background="@drawable/text_field_inner_shadow_gray"
    >

    <TextView
        android:id="@+id/tv_empty_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/img_empty_fragment"
        android:layout_marginBottom="20dp"

        app:layout_constraintStart_toStartOf="@id/img_empty_fragment"
        app:layout_constraintEnd_toEndOf="@id/img_empty_fragment"

        android:text="TEXT"
        />

    <ImageView
        android:id="@+id/img_empty_fragment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.widget.Button
        android:id="@+id/btn_empty_fragment"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="15sp"
        android:text="TEXT"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"

        app:layout_constraintTop_toBottomOf="@id/img_empty_fragment"
        app:layout_constraintStart_toStartOf="@id/img_empty_fragment"
        app:layout_constraintEnd_toEndOf="@id/img_empty_fragment"
        />


</androidx.constraintlayout.widget.ConstraintLayout>