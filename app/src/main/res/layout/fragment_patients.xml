<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.patients.PatientsFragment">

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_line_home_title"

        android:text="환자 리스트"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_gothic_bold"

        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"

        />

    <View
        android:id="@+id/view_line_home_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"

        app:layout_constraintTop_toBottomOf="@id/tv_main_title"
        app:layout_constraintBottom_toTopOf="@id/et_search_patient"
        />

    <ImageButton
        android:id="@+id/img_btn_add_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_line_home_title"
        app:layout_constraintEnd_toEndOf="parent"


        android:src="@drawable/person_add"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"
        />

    <ImageButton
        android:id="@+id/img_btn_delete_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_line_home_title"
        app:layout_constraintEnd_toStartOf="@id/img_btn_add_patient"

        android:layout_margin="10dp"
        android:src="@drawable/person_remove"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <EditText
        android:id="@+id/et_search_patient"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        app:layout_constraintTop_toBottomOf="@id/tv_main_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_patients"

        android:paddingStart="5dp"
        android:drawableStart="@drawable/ic_baseline_search_30"

        android:drawablePadding="10dp"
        android:textColorHint="@color/gray_dark"
        android:hint="@string/search"
        android:textSize="13sp"

        android:background="@drawable/text_field_background_round_white"
        android:backgroundTint="@color/gray_light"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="25dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_patients"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/et_search_patient"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginBottom="?attr/actionBarSize"
        />

    <android.widget.Button
        android:id="@+id/btn_delete_patient_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/delete"

        android:background="@color/primary_color"

        app:layout_constraintBottom_toBottomOf="@id/rv_patients"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>