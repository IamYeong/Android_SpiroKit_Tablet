<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.information.PatientInformationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_patient_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@color/secondary_color"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_name_patient_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="홍길동"
            android:fontFamily="@font/nanum_gothic_bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="20dp"
            />

        <TextView
            android:id="@+id/tv_content_patient_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n\n\n\n"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_gothic"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_patient_info"

            />

        <ImageButton
            android:id="@+id/img_btn_edit_patient_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_baseline_edit_30"

            android:background="@drawable/item_img_btn_bg"

            android:layout_gravity="center_horizontal"
            android:padding="7dp"

            app:layout_constraintTop_toTopOf="@id/tv_name_patient_info"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_patient_info"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginEnd="20dp"
            />

        <android.widget.Button
            android:id="@+id/btn_test_start_patient_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/text_field_background_round_white"
            android:backgroundTint="@color/primary_color"

            android:layout_marginVertical="30dp"
            android:fontFamily="@font/nanum_gothic"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/measurement"

            app:layout_constraintTop_toBottomOf="@id/tv_content_patient_info"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <TextView
        android:id="@+id/tv_subtitle_patient_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/nanum_gothic_bold"

        app:layout_constraintTop_toBottomOf="@id/card_patient_info"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:text="검사기록"
        />

    <TextView
        android:id="@+id/tv_period_tests_patient_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_dark"

        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_patient_info"
        app:layout_constraintStart_toStartOf="parent"

        android:text="2020.01.01 ~ 2022.05.24"
        android:layout_marginHorizontal="20dp"
        />

    <ImageButton
        android:id="@+id/img_btn_delete_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/tv_subtitle_patient_info"
        app:layout_constraintBottom_toBottomOf="@id/tv_subtitle_patient_info"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"

        android:src="@drawable/ic_baseline_delete_30_black"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <ImageButton
        android:id="@+id/img_btn_select_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/img_btn_delete_history"
        app:layout_constraintBottom_toBottomOf="@id/img_btn_delete_history"
        app:layout_constraintEnd_toStartOf="@id/img_btn_delete_history"
        android:layout_marginEnd="20dp"

        android:src="@drawable/ic_baseline_date_range_30_black"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_patient_test_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_period_tests_patient_info"
        app:layout_constraintBottom_toTopOf="@id/btn_delete_meas_tests"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <android.widget.Button
        android:id="@+id/btn_delete_meas_tests"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/primary_color"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>