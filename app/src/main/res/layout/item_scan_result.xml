<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_scan_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="15dp"
    android:paddingHorizontal="10dp"
    android:foreground="?attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/tv_scan_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:fontFamily="@font/nanum_gothic"
        android:textColor="@color/black"
        android:textSize="15sp"

        android:text="@string/not_applicable"
        />

    <TextView
        android:id="@+id/tv_scan_result_mac_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_scan_result_name"
        app:layout_constraintEnd_toStartOf="@id/tv_scan_result_decibel"

        android:fontFamily="@font/nanum_gothic"
        android:textColor="@color/black"
        android:textSize="15sp"

        android:text="@string/not_applicable"
        />

    <TextView
        android:id="@+id/tv_scan_result_decibel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:fontFamily="@font/nanum_gothic"
        android:textColor="@color/black"
        android:textSize="15sp"

        android:text="@string/not_applicable"

        />


</androidx.constraintlayout.widget.ConstraintLayout>